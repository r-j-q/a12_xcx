@import '../mobileLogin/index.wxss';

.login {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
    position: relative;
}

.login_top_image {
    width: 100%;
}

.login_send {
    top: 150rpx;
    text-align: center;
    margin: auto;
    left: 0;
    right: 0;
    color: #FFFFFF;
    position: absolute;
    font-size: 44rpx;
    font-weight: 400;
}

.login_nav {
    width: 100%;
    text-align: center;
    margin-top: 200rpx;
}

.login_nav view,.once {
    width: 85%;
    height: 92rpx;
    border-radius: 100rpx;
    margin: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
}

.login_nav .login_mobile {
    background: linear-gradient(180deg, #F71EFE 0%, #B80EE4 100%);
    color: #fff;
    margin-bottom: 50rpx;
}

.login_register,.once {
    background: #fff;
    color: #D616F1;
   

}
.login-password{
    margin-top: 100rpx;
}
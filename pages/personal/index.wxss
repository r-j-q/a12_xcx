@import '../details/index.wxss';

.personal {
    width: 100%;

    overflow-x: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
    position: relative;
}
button{
    width: 100%;
    height: 40rpx;
    font-size: 20rpx !important;
}
.portrait{
    width: 80rpx;
    height: 80rpx;
    border-radius: 100rpx;
    position: absolute;
    right: 10rpx;
}
.personal-top {
    width: 96%;
    background-color: #fff;
    margin: auto;
    border-radius: 10rpx;
    border: 1px solid #FCF0FF;
    padding: 30rpx 0 30rpx 0;
    margin-top: 30rpx;
}

.call {
    position: relative;
    width: 100%;
}

.comint {
    position: absolute;
    font-size: 26rpx;
    font-weight: 600;
    color: #ccc;
    right: 20rpx;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}
.zhuce{
    color: #f00;
    font-size: 22rpx;
    margin-left: 30rpx;
}
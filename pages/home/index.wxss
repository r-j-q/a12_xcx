.home {
    width: 100%;
    position: relative;
    overflow-x: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
}

.home-top {
    width: 100%;
}

.home-title {
    position: absolute;
    top: 50rpx;
    display: flex;
    flex-direction: column;
    left: 40rpx;
    color: #fff;
}

.name {
    font-weight: 500;
    font-size: 40rpx;
}

.swipers {
    height: 310rpx;
    width: 94%;
    margin: auto;
    margin-top: -110rpx;
    border-radius: 20rpx;
    overflow: hidden;
    transform: translateY(0);
}

.swipers image {
    width: 100%;
    border-radius: 20rpx;
}

.home-tab {
    width: 100%;
    /* height: 200rpx; */
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.home-tab view{
    width: 25%;
    height: 180rpx;
    font-size: 24rpx;
    color: #666666;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}


@import '../details/index.wxss';

.part {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-x: hidden;
    background: #FCF0FF;
    z-index: 1;
}

.part-card {
    width: 92%;
    height: 400rpx;
    background-color: #fff;
    margin: auto;
    border-radius: 20rpx;
    box-shadow: 0px 3px 6px 1px rgba(0, 0, 0, 0.16);
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: relative;
}
.tuisai{
    width: 140rpx !important;
    border: 1px solid #982EDF;
    border-radius: 10rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
    color: #999999;
    font-size: 28rpx;

}

.card {
    width: 260rpx;
    background: #982EDF;
    height: 240rpx;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #fff;

    font-size: 53rpx;
}

.date {
    color: #333333;
    font-weight: bold;
    font-size: 36rpx;
    margin-top: 40rpx;
}

.status {
    position: absolute;
    left: -44rpx;
    top: 36rpx;
    color: #fff;
    font-size: 26rpx;
    width: 141rpx;
    transform: rotate(-41deg);
    text-align: center;
    height: 0;
    border-bottom: 46rpx solid #FFA036;
    border-left: 40rpx solid transparent;
    border-right: 55rpx solid transparent;

}

.part-center {
    width: 92%;
    background: #fff;
    margin: auto;
    margin-top: 20rpx;
    border-radius: 10rpx;
    padding-bottom: 50rpx;
}

.order-border {
    padding-bottom: 20rpx;
    border-bottom: 1px solid #DDDDDD;
    margin-bottom: 50rpx;
}

.table {
    width: 96%;
    margin: auto;
    display: flex;
    margin-top: 20rpx;
    justify-content: center;
    align-items: center;
}

.table view {
    width: 46%;
    height: 135rpx;
    display: flex;
    align-items: center;
    background-color: rgba(255, 118, 204, 0.2);
    font-size: 26rpx;
    margin-left: 19rpx;
    border-radius: 10rpx;

    font-weight: bold;
    justify-content: center;
}

.table view text {
    margin-right: 30rpx;
}

.detail {
    width: 90%;
    margin: auto;
    display: flex;
    padding: 20rpx 0 10rpx 0;
}

.detail image {
    width: 30rpx;
    height: 30rpx;
}

.detail .address {
    width: 50rpx;
    position: absolute;
    right: 30rpx;
}

.detail view {
    margin-left: 10rpx;
    font-size: 26rpx;
    font-weight: bold;
    position: relative;
    display: flex;
    width: 86%;
}

.detail view text {
    width: 76%;
    display: inline-block;
    margin-left: 20rpx;
    word-wrap: break-word;
    font-weight: 400;
    color: #999999;
    font-size: 26rpx;
}

.border {
    border-radius: 5rpx;
    border: none;
    background: #F6F6F6;
}
.van-share-sheet__name {
    color: #646566;
    margin: 0 12px;
    margin-top: 8px;
}

.mine {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-x: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
}

.mine-top {
    width: 100%;
}

.mine-user {
    width: 100%;
    display: flex;
    position: absolute;
    top: 50rpx;
    left: 40rpx;
    align-items: center;

}
.kefu{
    display: flex;
    align-items: center;
    position: absolute;
    right: 80rpx;
}
.mine-user .kefu image{
    width: 40rpx;
    height: 40rpx;
}
.mine-user image {
    width: 105rpx;
    height: 105rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
}

.mine-user view {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    color: #fff;
    font-size: 24rpx;
}

.mine-user view .mine-name {
    font-size: 34rpx;
    font-weight: 500;
}

.mine-account {
    width: 92%;
    height: 355rpx;
    background: linear-gradient(180deg, #9F00B6 0%, #FF4BBD 100%);
    border-radius: 40rpx;
    margin: auto;
    margin-top: -80rpx;
    z-index: 10;
    position: relative;
    left: 0;
    right: 0;
    display: flex;
    flex-flow: wrap;
}

.mine-account view {
      /* flex: 1; */
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: #fff;
      font-size: 28rpx;
      position: relative;
      width: 25%;
}
.mine-account view .van-icon{
    position: absolute;
    right: 100rpx;
}

.mine-account view text {
    margin-top: 15rpx;
}

.sum {
    font-size: 46rpx;
}

.mine-center {
    background-color: #fff;
    width: 92%;
    margin: auto;
    height: 260rpx;
    margin-top: 50rpx;
    border-radius: 15rpx;
}
.mine-bottom{
    background-color: #fff;
    width: 92%;
    margin: auto;
    padding-bottom: 50rpx;
    margin-top: 40rpx;
    margin-bottom: 100rpx;
    border-radius: 15rpx;
}
.mine-order {
    font-weight: bold;
    color: #333333;
    font-size: 32rpx;
    border-left: 5rpx solid #A409DC;
    padding-left: 20rpx;
    width: 140rpx;
    position: relative;
    top: 10rpx;
}
.mine-flex{
    display: flex;
    width: 100%;
    height: 150rpx;
    margin-top: 40rpx;
    justify-content: center;
    align-items: center;
}
.mine-flex view{
 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1;

 font-size: 24rpx;
color: #666666;
}
.mine-flex image{
    width: 25%;
 
    margin-bottom: 20rpx;
    height: 50rpx;
}
.mine-cell{
    display: flex;
    align-items: center;
    margin-top: 40rpx;
}
.mine-cell image{
    width: 70rpx;
    height: 70rpx;
    margin-left: 20rpx;
    margin-right: 30rpx;
font-size: 30rpx;
color: #333333;
}
.van-icon{
    position: absolute !important;
    right: 40rpx !important;
}
.block{
    height: 1000rpx;
    width: 80%;
    background-color: #fff;
    border-radius: 20rpx;
    margin: auto;
    text-align: center;
   
}
.laile{
    width: 264rpx;
    height: 128rpx;
    margin-top: 40rpx;
}
.block view{
    margin-top: 15rpx;
}
.code{
    width: 350rpx;
    height: 450rpx;
}
.title{
    color: #E134D9;
    font-size: 30rpx;
    font-weight: 600;
}
.queren{
    width: 400rpx;
    height: 100rpx;
    background-color: #E72CD1;
    margin: auto;
    border-radius: 100rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
}
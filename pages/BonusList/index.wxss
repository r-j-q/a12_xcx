.bonuslist {
    width: 100%;
    height: 100%;
    position: relative;
    overflow-x: hidden;
    background: #FCF0FF;
}

.list-top {
    width: 92%;
    margin: auto;
    position: relative;
    margin-top: 20rpx;
    height: 90vh;
    background-color: #fff;
    border-radius: 30rpx;
}

.list-top image {
    width: 100%;
    height: 20vh;
}

.date {
    position: absolute;
    top: 13vh;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;
    margin-top: 15rpx;
    color: #FFFFFF;
}

.cells {
    width: 96%;
    margin: auto;
    height: 70vh;
    margin-top: 10rpx;

}

.rows {
    width: 100%;
    display: flex;
    height: 100rpx;
    background-color: #FF76CC;
    align-items: center;
    justify-content: center;

}

.row {
    width: 100%;
    display: flex;
    height: 100rpx;
    align-items: center;
    justify-content: center;
   
}

.row view {
    color: #666666;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: 1px solid rgba(255, 93, 195, 0.16);
    height: 80rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    border-left: none;
    border-top: none;
}

.rows view {

    color: #fff;
    border: 1px solid #fff;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;

    font-size: 28rpx;
    
}
.row .row0{
    border-top: 1px solid rgba(255, 93, 195, 0.16);
}

.row .active0{
    border-left: 1px solid rgba(255, 93, 195, 0.16) ;
}
.active0 {
    flex: 2;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.active1,
.active2,
.active3,
.active4,
.active5 {
    flex: 1;
}
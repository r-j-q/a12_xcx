.login {
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
    position: relative;
}

.login_top_image {
    width: 100%;
}

.login-mobile {
    width: 200rpx;
    margin-top: 120rpx;
    margin-left: 8%;
    display: flex;
    align-items: center;
    font-size: 48rpx;
    color: #333333;
    font-weight: 400;
}

.login-mobile image {
    width: 9rpx;
    margin-right: 20rpx;
}

.login-center {
    width: 86%;
    height: 92rpx;
    border-radius: 100rpx;
    margin: auto;
    background: #fff;
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    position: relative;
}

.login-center image {
    width: 30rpx;
    height: 30rpx;
    margin-left: 50rpx;
}

input {
    width: 55%;
    margin-left: 20rpx;
    font-size: 30rpx;
}

.login-type {
    color: #E72CD1;
    font-size: 26rpx;
    margin-left: 9%;
    margin-top: 30rpx;
}
.login-code{
    width: 200rpx;
    height: 100%;
    background: #C005F2;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0 100rpx 100rpx 0;
   
}
.login-code view{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.login_mobile{
    width: 86%;
    height: 92rpx;
    border-radius: 100rpx;
    margin: auto; 
    background: linear-gradient(180deg, #F71EFE 0%, #B80EE4  100%);
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 80rpx;
    font-size: 34rpx;
    margin-bottom: 50rpx;
}
.login-password{
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333333;
    font-size: 26rpx;

}
.login-password .title{
    color: #D616F1;
}
@import '../home/index.wxss';

.ball {
    width: 100%;
    position: relative;
    overflow-x: hidden;
    background: linear-gradient(180deg, #FCF0FF 0%, #F4EEFF 100%);
}
.home-tabs image {
    width: 34%;
    height: 8rpx;
    margin-top: 5rpx;
}
.data{
    height: 100vh !important;
}
.home-select{
    width: 100%;
    height: 100rpx;
    background:#FCF0FF;
    position: fixed;
    top: 0;
    z-index: 11;
    margin-top: 0;
}
.ball-cell{
    margin-top: 100rpx;
}
.sign-about{
    position: fixed;
    top: 70%;
    right: 30rpx;
    width: 170rpx;
    height: 170rpx;
    z-index: 11;
}
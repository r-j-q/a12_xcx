.orders {
  width: 100%;
  height: 100%;
  padding: 30rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.orders_await {
  display: flex;
  justify-content: space-between;
}

.orders_await text:nth-child(4) {
  color: #54825D;
}

.orders_list {
  flex: 1;
}

.orders_list_li {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}

.orders_list_li > view:nth-child(1) {
  display: flex;
  align-items: center;
}

.orders_list_li > view:nth-child(1) image {
  width: 100rpx;
  height: 100rpx;
}

.orders_list_li > view:nth-child(1) > view {
  margin-left: 20rpx;
}

.orders_list_li > view:nth-child(1) > view view:nth-child(1) {
  font-weight: bold;
}

.orders_list_li > view:nth-child(1) > view view:nth-child(2) {
  padding: 10rpx 0 5rpx 0;
  font-size: 24rpx;
}

.orders_list_li > view:nth-child(1) > view view:nth-child(3) {
  font-size: 24rpx;
}

.orders_list_li > view:nth-child(1) > view text + text {
  padding-left: 30rpx;
}

.orders_list_li > view:nth-child(2) {
  font-weight: bold;
}

.orders_list_li + .orders_list_li {
  border-top: 1rpx solid #92A29F;
}

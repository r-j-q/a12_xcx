.vip {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.vip .package {
  margin-top: 40rpx;
}

.vip .package > text {
  font-weight: bold;
}

.vip .package_list {
  display: flex;
  flex-wrap: wrap;
}

.vip .package_list .active {
  background-color: #EFF1EE;
  color: #55AE6C;
}

.vip .package_list view {
  width: 30%;
  height: 250rpx;
  border: 1rpx solid #58AD6A;
  border-radius: 20rpx;
  margin-right: 5%;
  margin-top: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  background-color: #F4F4F4;
}

.vip .package_list view text:nth-child(2) {
  padding: 20rpx 0;
}

.vip .package_list view text:nth-child(3) {
  padding: 0 10rpx;
  color: #434343;
}

.vip .package_list view:nth-child(3n) {
  margin-right: 0;
}

.vip .privilege {
  margin-top: 40rpx;
}

.vip .privilege > text {
  font-weight: bold;
}

.vip .privilege_list {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.vip .privilege_list > view {
  font-weight: bold;
  font-size: 20rpx;
  text-align: center;
}

.vip .privilege_list > view > view {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
  background-color: #448E53;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vip .privilege_list > view > view image {
  width: 50rpx;
  height: 50rpx;
}

.vip .privilege_agreement {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
}

.vip .privilege_agreement text {
  color: #BBA677;
}

.vip .pay {
  width: 100%;
  padding: 20rpx 0;
  background-color: #448E53;
  color: #ffffff;
  text-align: center;
  margin-top: 200rpx;
}
